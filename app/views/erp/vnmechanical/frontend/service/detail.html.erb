<!-- Inner page heading start -->
<section class="my-inner-heading-field my-inner-heading-three  my-layer-black">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="my-inner-heading-col">
                    <h2><%= @service.category_name %></h2>
                    <p>
                        <%= link_to 'Trang Chủ', erp_vnmechanical.root_path, title: 'Quay về trang chủ' %>
                        <%= link_to 'Dịch Vụ', erp_vnmechanical.service_listing_path, title: 'Dịch Vụ', class: 'bread-back' %>
                        <span class='bread-back'><%= @service.name %></span>
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Inner page heading end -->

<!-- Service details start -->
<section class="my-service-details-field">
    <div class="container">
        <div class="row">
            <div class="col-md-9">
                <div class="my-service-details-col">
                    <div class="my-processing">
                        <div class="my-service-details-col">
                            <h2>Dịch vụ <span><%= @service.name %></span></h2>
                            <p><%= @service.content.html_safe %></p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="my-Service-details-col">
                    <ul>
                        <% @categories.each do |category| %>
                        <% service = Erp::Articles::Article.find_by_category_id(category.id) %>
                            <li class="<%= 'active' if (!service.nil? and (service.id == params[:service_id].to_i)) %>">
                                <%= link_to category.name, (service.nil? ? 'javascript:;' : service_link(service)) %>
                            </li>
                        <% end %>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Service details end -->