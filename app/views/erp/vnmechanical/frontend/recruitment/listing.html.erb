<!-- Inner page heading start -->
<section class="my-inner-heading-field my-inner-heading-three  my-layer-black">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="my-inner-heading-col">
                    <h2>Tuyển dụng</h2>
                    <p>
                        <%= link_to 'Trang Chủ', erp_vnmechanical.root_path, title: 'Quay về trang chủ' %>
                        <%= link_to 'Tin tuyển dụng', erp_vnmechanical.recruitment_listing_path, title: 'Tin tuyển dụng', class: 'bread-back' %>
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Inner page heading end -->

<!-- Blog start -->
<section class="my-blog-filed">
    <div class="container">
        <div class="row animatedParent animateOnce">
            <% if @recruitments.count > 0 %>
                <% @recruitments.each do |recruitment| %>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="my-blog-col animated fadeInUpShort slow delay-250">
                                <div class="my-blog-image">
                                    <%= image_tag recruitment.image.medium, alt: recruitment.name %>
                                </div>
                                <div class="my-blog-heading">
                                    <h2><%= link_to recruitment.name, article_link(recruitment), title: '' %></h2>
                                </div>
                                <p><%= short_text(recruitment.content, 30) %> <a href="<%= article_link(recruitment) %>">[...]</a></p>
                                <div class="my-blog-bottom clearfix">
                                    <ul>
                                        <li><i class="fa fa-clock-o"></i> <%= relative_time(recruitment.created_at) %></li>
                                    </ul>
                                </div>

                            </div>
                        </div>
                    </div>
                <% end %>
                <div class="pagination-vnmechanical">
                    <%= erp_datalist_pagination(@recruitments) %>
                </div>
            <% else %>
                <div class="alert alert-warning">
                    <i class="fa fa-warning"></i> Hiện chưa có thông tin tuyển dụng.
                </div>
            <% end %>
        </div>
    </div>
</section>
<!-- Blog end -->