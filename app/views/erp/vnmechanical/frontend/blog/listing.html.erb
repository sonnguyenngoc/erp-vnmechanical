<!-- Inner page heading start -->
<section class="my-inner-heading-field my-inner-heading-three  my-layer-black">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="my-inner-heading-col">
                    <h2>Tin Tức</h2>
                    <p>
                        <%= link_to 'Trang Chủ', erp_vnmechanical.root_path, title: 'Quay về trang chủ' %>
                        <%= link_to 'Tin Tức', 'javascript:;', title: 'Tin Tức', class: 'bread-back' %>
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Inner page heading end -->

<!-- Blog start -->
<section class="my-blog-filed">
    <div class="container">
        <div class="row animatedParent animateOnce">
            <% if @blogs.count > 0 %>
                <div class="row">
                    <% @blogs.each_with_index do |blog,index| %>
                        <div class="col-md-4">
                            <div class="my-blog-col animated fadeInUpShort slow delay-250">
                                <div class="my-blog-image">
                                    <%= image_tag blog.image.medium, alt: blog.name %>
                                </div>
                                <div class="my-blog-heading">
                                    <h2><%= link_to blog.name, article_link(blog), title: '' %></h2>
                                </div>
                                <p><%= short_text(blog.content, 30) %> <a href="<%= article_link(blog) %>">[...]</a></p>
                                <div class="my-blog-bottom clearfix">
                                    <ul>
                                        <li><i class="fa fa-clock-o"></i> <%= relative_time(blog.created_at) %></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <%= "</div><div class=\"row\">".html_safe if index%3 == 2 %>
                    <% end %>
                </div>
                <div class="pagination-vnmechanical">
                    <%= erp_datalist_pagination(@blogs) %>
                </div>
            <% else %>
                <div class="alert alert-warning">
                    <i class="fa fa-warning"></i> Hiện chưa có bài viết cho mục này.
                </div>
            <% end %>
        </div>
    </div>
</section>
<!-- Blog end -->